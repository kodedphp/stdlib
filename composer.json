{
  "name": "koded/stdlib",
  "type": "library",
  "license": "BSD-3-Clause",
  "description": "A standard library for shareable classes and functions",
  "keywords": [
    "mime",
    "mime-types",
    "uuid",
    "uuid-generator",
    "immutable",
    "utility",
    "exceptions",
    "dto",
    "dot-array",
    "serializer",
    "config"
  ],
  "authors": [
    {
      "name": "Mihail Binev",
      "homepage": "https://kodeart.com"
    }
  ],
  "require": {
    "php": "^8",
    "psr/http-message": "^1",
    "ext-json": "*",
    "ext-dom": "*",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "ext-ctype":  "*",
    "ext-mbstring": "*"
  },
  "suggest": {
    "msgpack": "msgpack module for de/serialization",
    "igbinary": "igbinary module for de/serialization"
  },
  "autoload": {
    "classmap": ["", "Serializer/"],
    "files": [
      "semver.php",
      "Interfaces.php",
      "functions.php"
    ],
    "exclude-from-classmap": ["Tests/"]
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "phpbench/phpbench": "@dev"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Koded\\Stdlib\\": "Tests/"
    }
  },
  "config": {
    "optimize-autoloader": true
  }
}